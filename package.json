{
  "name": "wallet-microservice",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "start:worker": "node dist/worker.js",
    "start:worker:dev": "ts-node src/worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:html": "jest --coverage --coverageReporters=html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "SAGA_STUCK_THRESHOLD=5000 jest --config test/jest-e2e.json --runInBand",
    "test:integration": "jest --config test/jest-integration.json --runInBand",
    "test:stress": "SAGA_STUCK_THRESHOLD=5000 jest --config test/jest-stress.json --runInBand",
    "test:e2e:quick": "NODE_ENV=test jest --config test/jest-e2e-quick.json --runInBand",
    "test:e2e:stress": "SAGA_STUCK_THRESHOLD=5000 NODE_ENV=stress jest --config test/jest-e2e-stress.json --runInBand",
    "test:load": "artillery run test/load/load-test.yml",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "test:full": "npm run test:all && npm run test:stress"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "decimal.js": "^10.6.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/testing": "^11.1.9",
    "@types/amqplib": "^0.10.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "artillery": "^2.0.0",
    "eslint": "^9.16.0",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
